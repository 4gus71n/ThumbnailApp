<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="thumbnail_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="thumbnail_text_style_medium" parent="thumbnail_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">6</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="thumbnail_text_style_large" parent="thumbnail_text_style">
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

</resources>
